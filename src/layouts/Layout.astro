---
import Background from '../components/Background.astro';
import Footer from '../components/Footer.astro';
import Head from '../components/Head.astro';
import Header from '../components/Header.astro';

interface Props {
  isHome: boolean;
  title?: string;
  description?: string;
};

const {
	isHome = false,
  ...rest
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<Head {isHome} {...rest} />

  <body>
		<Background />

    <div id="content">			
      <Header {isHome} {...rest} />

      <main id="main">
        <section class="main-content">
          <slot/>
        </section>
      </main>

      <Footer {isHome} {...rest} />
    </div>
  </body>
</html>
