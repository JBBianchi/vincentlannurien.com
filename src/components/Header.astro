---
import { SITE_TITLE } from '../consts';
import Breadcrumbs from './Breadcrumbs.astro';
interface Props {
  isHome: boolean;
}

const {
  isHome
} = Astro.props;
---

<header>
  <div class="grid">
    <p class="header-title">
      <a href="/"><b>{ SITE_TITLE }</b></a>
    </p>

    <p class="header-logo">
      <span class="animate-blink">💔</span><span style="opacity: 0.5">🤍🤍</span>
    </p>

    <ul class="header-nav">
      <!--{{ $currentPage := . }}
      {{ range .Site.Menus.main }}
        <li class="{{ if $currentPage.HasMenuCurrent "main" . }}active{{ end }}">
          <a href="{{ .URL }}"><span>{{ .Name }}</span></a>
        </li>
      {{ end }}
    -->
    </ul>
  </div>
</header>

<hr>

{ isHome &&
  <Breadcrumbs />
}


